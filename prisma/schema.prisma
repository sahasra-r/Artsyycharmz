// prisma/schema.prisma
datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

generator client {
  provider = "prisma-client-js"
}

model Product {
  id          String   @id @default(cuid())
  name        String
  description String
  price       Float
  image       String   // This will be a URL or file path
  category    String   // e.g., "bouquets", "keychains"
  createdAt   DateTime @default(now())
}